<odoo>
    <data>
        <report id="current_stock_report" menu="False" model="current.stock.report.wizard" name="stock_details_report_oilia.current_stock_report_template"  report_type="qweb-pdf" string="Stock Report Details"/>
        <template id="current_stock_report_template">
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <div class="page" style="padding-top:30px;">

                        <div class="text-center">

                         <h4>Stock Report Details</h4>

                        </div>

                        <div>
                        <p> Stock Name: <span t-esc="warehouse_name.name"/> </p>

                        </div>

                        <table  class="table table-condensed">
                <thead><tr>
                    <th class="text-left" >SL</th>
                    <th class="text-left">Product</th>
                    <th class="text-left">Category</th>
                    <th class="text-left">Quantity</th>
                    <th class="text-left">UoM</th>
                </tr></thead>
                <tbody>

                    <t t-set="i" t-value="1"/>
                    <t t-set="total_qty" t-value="0"/>
                <tr t-foreach='quants' t-as='quant'>
                     <td><t t-esc="i" /></td>
                    <td><t t-esc="quant.product_id.display_name"/></td>
                    <td><t t-esc="quant.product_id.categ_id.name"/></td>
                    <td><t t-esc="quant.quantity" t-options='{"widget": "float", "precision": 2}' /></td>
                    <td><t t-esc="quant.product_uom_id.name"/></td>
                     <t t-set="i" t-value="i+1"/>
                     <t t-set="total_qty" t-value="total_qty + quant.quantity"/>

                </tr>

                 <tr style="font-weight: bold; color: blue;">
                     <td > <b>Total </b></td>
                     <td>  </td>
                     <td>  </td>
                     <td> <span t-esc="total_qty" t-options='{"widget": "float", "precision": 2}'/> </td>
                     <td> </td>

                 </tr>

                </tbody>
                <style>
                        td {border: 1px solid #000; }
                        th { color: white;
                            background-color: black;
                            text-align: center;
                         }

                        </style>

            </table>

                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>