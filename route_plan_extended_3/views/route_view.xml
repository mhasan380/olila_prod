<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="route_master_form_inherit_customer" model="ir.ui.view">
            <field name="name">route.master.form.view.inherit</field>
            <field name="model">route.master</field>
            <field name="inherit_id" ref="dsl_road_plan.route_master_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/div" position="before">
                    <div name="button_box">
                     <button name="assign_customers" string="Assign Customers" class="btn-primary" type="object"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>