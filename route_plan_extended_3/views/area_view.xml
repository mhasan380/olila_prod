<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="route_area_form_inherit" model="ir.ui.view">
            <field name="name">route.area.form.view.inherit</field>
            <field name="model">route.area</field>
            <field name="inherit_id" ref="dsl_road_plan.route_area_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/div" position="before">
                    <div name="button_box">
                     <button name="assign_routes" string="Assign Routes" class="btn-primary" type="object"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>